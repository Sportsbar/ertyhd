namespace EmployeePortal.API.Dto
{
    public class AllTools
    {
        public InsertToolRequest InsertTool { get; set; }
        public UpdateToolRequest UpdateTool { get; set; }
        public DeleteToolRequest DeleteTool { get; set; }

        public class InsertToolRequest
        {
            public string Name { get; set; }
            public string Url { get; set; }
            public bool Active { get; set; }
        }

        public class UpdateToolRequest
        {
            public int Id { get; set; }
            public string Name { get; set; }
            public string Url { get; set; }
            public bool Active { get; set; }
        }


        public class DeleteToolRequest
        {
            public int Id { get; set; }
        }
    }
}
