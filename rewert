public class FirstController : Controller
{
    // GET: First
    public ActionResult Index()
    {
        Session["Message"] = "Hello MVC!";
        return View();
    }
}

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>Index</title>
</head>
<body>
    <div>
        @Session["Message"]
    </div>
</body>
</html>
